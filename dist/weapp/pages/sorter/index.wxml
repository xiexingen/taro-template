<block wx:if="{{$taroCompReady}}">
    <basic-page compid="{{$compid__680}}">
        <view class="{{styles.header}}">
            <view class="at-article">
                <view class="{{styles['header-title'] + ' at-article__h2'}}">{{model.title}}</view>
            </view>
            <view class="{{'at-row at-row__align--center ' + styles['header-tag'] + ' at-article__h3'}}">
                <view class="at-col t-center">
                    <view>总人数</view>
                    <view class="{{styles.number}}">{{model.total}}</view>
                </view>
                <view class="at-col t-center">
                    <view>已抽序号数</view>
                    <view class="{{styles.number}}">{{model.users.length}}</view>
                </view>
                <view class="at-col t-center">
                    <view>剩余序号数</view>
                    <view class="{{styles.number + ' ' + styles.remain}}">{{model.total - model.users.length}}</view>
                </view>
            </view>
            <view class="{{styles.my}}">
                <block>
                    <block wx:if="{{model.currentUser}}">
                        <view class="{{'at-article__h3 t-center ' + styles.order}}">您的排序是：第
                            <view class="{{styles.orderNo}}">{{model.currentUser.orderNo}}</view>位</view>
                    </block>
                    <block wx:else>
                        <at-button compid="{{$compid__681}}">点击抽取排序</at-button>
                    </block>
                </block>
            </view>
        </view>
        <view class="t-center">
            <at-icon compid="{{$compid__682}}"></at-icon>
        </view>
        <view class="{{styles.users}}">
            <view wx:key="id" class="{{styles['user-item']}}" wx:for="{{loopArray81}}" wx:for-item="item" wx:for-index="_anonIdx2">第
                <view class="{{styles['item-order']}}">{{item.$original.orderNo}}</view>位 :
                <at-avatar compid="{{item.$compid__679}}"></at-avatar>
                <view class="{{styles.nickName}}">{{item.$original.nickName}}</view>
            </view>
        </view>
        <view class="t-center">
            <at-icon compid="{{$compid__683}}"></at-icon>
        </view>
    </basic-page>
</block>